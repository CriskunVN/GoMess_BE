    "/v1/auth/register": {
      "post": {
        "summary": "Register",
        "tags": ["auth"],
        "responses": {
          "201": {
            "description": "Successful registration"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "utc-millisec"
                  },
                  "displayName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/auth/login": {
      "post": {
        "summary": "Login",
        "description": "Login với username và password để nhận về accessToken trong res và refreshToken trong httpOnly cookie",
        "tags": ["auth"],
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "color"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        }
      }
    },
    "/v1/auth/logout": {
      "post": {
        "summary": "Logout",
        "tags": ["auth"],
        "parameters": [
          {
            "name": "Access-Control-Request-Method",
            "in": "header",
            "required": false,
            "deprecated": false,
            "schema": {}
          }
        ],
        "responses": {
          "200": {
            "description": "Successful logout"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
